{
  "name": "@stardust-distro/distro-template",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "test:setup": "bash scripts/setup-test-env.sh",
    "test:run": "vite --mode test",
    "test:cleanup": "docker-compose -f docker/docker-compose.test.yml down -v",
    "test:all": "npm run test:setup && npm run test:run",
    "test:protocols": "npm run test:setup && vite --mode test",
    "docker:build": "docker build -f docker/Dockerfile -t stardust-distro .",
    "docker:run": "docker run -p 8080:8080 stardust-distro",
    "docker:test": "docker-compose -f docker/docker-compose.test.yml up -d",
    "docker:test:down": "docker-compose -f docker/docker-compose.test.yml down",
    "docker:test:logs": "docker-compose -f docker/docker-compose.test.yml logs -f",
    "serve:production": "vite preview --port 8080 --host",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:all": "npm run build && firebase deploy",
    "zap:start": "docker compose -f docker-compose.zap.yml up -d",
    "zap:stop": "docker compose -f docker-compose.zap.yml down",
    "zap:logs": "docker compose -f docker-compose.zap.yml logs -f",
    "zap:restart": "docker compose -f docker-compose.zap.yml restart",
    "test:security": "npm run zap:start && sleep 10 && npm run dev"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/vue-fontawesome": "^3.0.5",
    "dompurify": "^3.2.6",
    "firebase": "^12.1.0",
    "pinia": "^2.1.7",
    "vue": "^3.3.11",
    "vue-router": "^4.2.5",
    "xmlbuilder2": "^3.1.1",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@types/dompurify": "^3.0.5",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "prettier": "^3.0.3",
    "vite": "^5.0.0"
  }
}
