# functions/.env.example
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# ============================================
# SPOTIFY API CREDENTIALS
# ============================================
# Get these from https://developer.spotify.com/dashboard
# 1. Create a new app at the Spotify Dashboard
# 2. Copy the Client ID and Client Secret
# 3. No redirect URI needed for server-side auth
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# ============================================
# DISCOGS API CREDENTIALS (Future)
# ============================================
# Get these from https://www.discogs.com/settings/developers
# DISCOGS_TOKEN=your_discogs_personal_access_token_here
# DISCOGS_KEY=your_discogs_consumer_key_here
# DISCOGS_SECRET=your_discogs_consumer_secret_here

# ============================================
# MUSICBRAINZ API (Future)
# ============================================
# MusicBrainz doesn't require authentication but respects rate limits
# MUSICBRAINZ_USER_AGENT=YourAppName/1.0.0 (your-email@example.com)

# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================
# Set to 'development' for local testing, 'production' for deployed functions
NODE_ENV=development

# ============================================
# API RATE LIMITS (Optional)
# ============================================
# Configure rate limits for external APIs (requests per second)
# SPOTIFY_RATE_LIMIT=10
# DEEZER_RATE_LIMIT=50
# DISCOGS_RATE_LIMIT=1

# ============================================
# CACHE CONFIGURATION (Optional)
# ============================================
# Cache TTL in seconds (default: 30 days = 2592000)
# METADATA_CACHE_TTL=2592000

# ============================================
# CORS CONFIGURATION (Optional)
# ============================================
# Additional allowed origins (comma-separated)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================
# FIREBASE EMULATOR CONFIGURATION (Optional)
# ============================================
# For local development with emulators
# FIRESTORE_EMULATOR_HOST=localhost:8080
# FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
# FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# ============================================
# DEBUG OPTIONS (Optional)
# ============================================
# Enable verbose logging for debugging
# DEBUG=true
# LOG_LEVEL=verbose

# functions/.env.example
# Optional: Override default distributor ID
DISTRIBUTOR_ID=my-distributor-id

# Optional: Custom domain for CORS
CUSTOM_DOMAIN=https://mydistro.com